<div class="container text-center mt-4">
  <%= simple_form_for :search, url: users_path, method: :get do |f| %>
    <div class="search-form-control form-group d-flex">
      <input class="form-control string required" style="max-width: 770px" type="text" name="query" id="search_query" />
      <button name="button" type="submit" class="btn btn-primary ml-3">
        <i class="fas fa-search"></i> Find an user!
      </button>
    </div>
  <% end %>
</div>

<div class="container mt-3 d-flex justify-content-between">

    <div class="cards mt-4">
      <% @users.each do |user| %>
        <div class="card-item">
          <div class="card-item-display">
           <% if user.photo.attached? %>
            <%= cl_image_tag user.photo.key, width: 200, height: 200, crop: :fill %>
           <% else %>
            <%= image_tag 'user.png'%>
           <% end %>
          </div>
          <div class="card-item-hover">
            <h2><%= link_to user.name, user_path(user)%></h2>
            <p><%= user.name %></p>
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, crop: :fill, class:"card-item-user avatar-bordered", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag 'user.png', crop: :fill, class: "card-item-user avatar-bordered", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          </div>
        </div>
      <%end%>
    </div>
  </div>


