<div class="container mt-5">
<h1 class="text-primary">Edit <%= resource_name.to_s.humanize %></h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true,
                autofocus: true,
                required: false,
                input_html: { autocomplete: "email", class: 'rounded-pill' } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password", class: 'rounded-pill' } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password", class: 'rounded-pill' } %>
    <%= f.input :photo,
                input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload your photo' %>
    <%= f.input :name,
                input_html: { autocomplete: "current-name", class: 'rounded-pill' } %>
    <%= f.input :surname,
                input_html: { autocomplete: "current-surname", class: 'rounded-pill' } %>
    <%= f.input :description,
                input_html: { autocomplete: "current-description", class: 'rounded-pill' } %>
    <%= f.input :address,
                input_html: { autocomplete: "current-address", class: 'rounded-pill' } %>
    <strong><%= f.input :current_password,
                hint:"we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password", class: 'rounded-pill' } %></strong>
  </div>

    <%= f.button :submit, "Update", class:'form-actions btn btn-primary btn-block btn-login font-weight-bold mb-3 rounded-pill p-2' %>
<% end %>

  <div></br>
    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  </div>
</div>
