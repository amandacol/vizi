<div class="container mt-5"><h1>Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs form-label-group mt-3">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'rounded-pill' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'rounded-pill' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <div class="form-actions btn btn-primary btn-block btn-login text-uppercase font-weight-bold mb-3 rounded-pill">
      <%= f.button :submit, "Log in" %>
    </div>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
