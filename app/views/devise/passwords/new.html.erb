<div class="container mt-5"><h1>Forgot your password?</h1>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-label-group mt-3">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'rounded-pill' } %>
    <%= f.submit "Send me reset password instructions", class:'form-actions btn btn-primary btn-block btn-login text-uppercase font-weight-bold mb-3 rounded-pill p-2' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>
