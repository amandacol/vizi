<div class="container text-center mt-4">
<h1 class="mb-4">Have a look at the sports items of our community!</h1>
<%= simple_form_for :search, url: items_path, method: :get do |f| %>
  <div class="search-form-control form-group d-flex">
    <input class="form-control string required" style="max-width: 770px" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-primary ml-3">
      <i class="fas fa-search"></i> Find an item!
    </button>
  </div>
<% end %>
<p>Space for dropdown filters: Sports, Location and date</p>
<div class="card-trip">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-trip-infos">
    <div>
      <h2>Name of the item</h2>
      <p>Short description here!</p>
    </div>
    <h2 class="card-trip-pricing">R$</h2>
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
  </div>
</div>
</div>


