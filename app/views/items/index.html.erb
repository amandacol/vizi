<div class="container text-center mt-4">
<%= simple_form_for :search, url: items_path, method: :get do |f| %>
  <div class="search-form-control form-group d-flex">
    <input class="form-control string required" style="max-width: 770px" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-primary ml-3">
      <i class="fas fa-search"></i> Find an item!
    </button>
  </div>
<% end %>
<p>Space for dropdown filters: Sports, Location and date</p>

<% @items.each do |item| %>
  <div class="card-item" >
  <% if @item.photo.attached? %>
    <%= cl_image_tag @item.photo.key, width: 200, height: 200, crop: :fill %>
  <% else %>
    <img src="https://images.unsplash.com/photo-1521412644187-c49fa049e84d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80" />
  <% end %>
  <div class="card-item-infos">
    <div>
      <h2><%= link_to item.name, item_path(item)%></h2>
      <p><%= item.sport %></p>
    </div>
    <h2 class="card-item-pricing">R$ <%= item.price %></h2>
    <img src="https://images.unsplash.com/photo-1489980557514-251d61e3eeb6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="card-trip-user avatar-bordered" />
  </div>
<%end%>


<% if policy(Item).create? %>
  <%= link_to "Add your item!", new_item_path, class: "btn btn-vizi btn-lg"%>
<% end %>
