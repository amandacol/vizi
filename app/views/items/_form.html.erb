<div class="container text-center rounded">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 bg-primary rounded p-3" style="box-shadow: 0 0 15px rgba(0,0,0,0.2);">

      <%= simple_form_for @item do |f| %>

        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.association :sport, collection: Sport.all, prompt: "choose a sport" %>
        <%= f.input :size %>
        <%= f.input :transaction_type, collection: ["Rental","Sale"], as: :radio_buttons %>

        <div id="conditional_rental" style ="display:none">
          <%= f.input :start_date, label: "Available from..."%>
          <%= f.input :end_date, label: "... to" %>
        </div>
        <%= f.input :price, label: "Price (per day if rental)"%>

        <%= f.input :photo,
                     required: true,
                     autofocus: true,
                     input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>

        <%= f.submit "Done!", class: 'btn btn-warning mb-1' %>

      <% end %>

    </div>
  </div>
</div>
