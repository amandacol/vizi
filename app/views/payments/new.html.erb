<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @order.item.photo_url, width: '100%' %></div>
    <div class="col">
      <h1>Checkout summary</h1>
      <p>Purchase of <strong><%= @order.item.name %></strong> for <strong><%= humanized_money_with_symbol @order.amount %></strong></p>
      <button id="pay" class="btn btn-primary">Pay</button>
    </div>
  </div>
</div>
